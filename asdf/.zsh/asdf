__load_asdf() {
  local brew_asdf="$(brew --prefix asdf)/libexec/asdf.sh"
  local home_asdf="$HOME/.asdf/asdf.sh"
  
  local asdf_location=""
  
  if [[ -f "$brew_asdf" ]]; then
    asdf_location="$brew_asdf"
  elif [[ -f "$home_asdf" ]]; then
    asdf_location="$home_asdf"
  else
    echo "ASDF not found"
    exit 1
  fi
  
  source "$asdf_location"
}

__load_asdf
