#!/bin/sh
[ ! -n "${SCRIPTS}" ] && echo "SCRIPTS not set" && exit 1;
[ ! -n "${1}" ] && echo "usage: newx <name>" && exit 1;

path="${SCRIPTS}/${1}"

if [ -e "${path}" ]; then
  read -p "${1} already exists. Edit? " yes
  case "${yes}" in
    y|yes|yep|yeppers|yeah|ok|okay) exec "${EDITOR:-vim}" "${path}"
  esac
  exit 0
fi

printf "#!/bin/sh\n\n" > "${path}"
chmod +x "${path}" 
exec "${EDITOR:-vim}" +2 "${path}"
