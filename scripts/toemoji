#!/usr/local/bin/bash

declare -A emoji
emoji[smile]=":)"
emoji[bear]=RAWR
emoji[hamburger]=Mmmmm
emoji[lightbulb]=AHA
emoji[laugh]=ðŸ¤£
emoji[pomo]="..."

toemoji() {
  local buf="${1:-/dev/stdin}"
  while read -r line; do
    for k in ${!emoji[@]}; do
      line=${line//:$k:/${emoji[$k]}}
    done
    echo "$line"
  done < "$buf"
}

toemoji "$@"
